{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": ["temp.js", "**/vendor/*.js", "webpack.config.js"],
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"]
	}
}
